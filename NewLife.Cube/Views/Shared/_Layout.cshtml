@using NewLife.Common;
@{
    var cfg = NewLife.Common.SysConfig.Current;
    var title = ViewBag.Title + "";
    if (title != "" && !title.EndsWith(" - ")) { title += " - "; }
    title += cfg.DisplayName;
    var title2 = ViewBag.Title2 as String;
    if (!title2.IsNullOrEmpty()) { title += " - " + title2; }
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！*@
    <title>@title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- 页面内联样式 -->
    @RenderSection("css", required: false)

    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/Content/bootstrap-switch/bootstrap-switch.min.css" />*@
</head>
<body>
    @*@Html.Partial("_Layout_Header")*@

    @*<div class="container">*@
    @RenderBody()
    @*</div>*@

    @*@Html.Partial("_Layout_Footer")*@

    <script src="~/Content/js/jquery-2.1.3.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    @*<script src="~/Content/bootstrap-switch/bootstrap-switch.min.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
